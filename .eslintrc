{
  "rules": {
    "array-bracket-spacing": [
      2,
      "never"
    ],
    "computed-property-spacing": [
      2,
      "never"
    ],
    "dot-notation": [
      1,
      {
        "allowKeywords": true,
        "allowPattern":  ""
      }
    ],
    "func-style": [
      2,
      "expression"
    ],
    "indent": [
      2,
      2,
      {"VariableDeclarator": 1}
    ],
    "init-declarations": [
      2,
      "always"
    ],
    "key-spacing": [
      2,
      {
        "afterColon":  true,
        "align":       "value",
        "beforeColon": false
      }
    ],
    "linebreak-style": [
      2,
      "unix"
    ],
    "max-depth": [
      1,
      4
    ],
    "max-len": [
      2,
      100
    ],
    "max-nested-callbacks": [
      2,
      3
    ],
    "max-statements": [
      1,
      100
    ],
    "newline-after-var": [
      2,
      "always"
    ],
    "no-mixed-spaces-and-tabs": [
      2,
      "smart-tabs"
    ],
    "no-multiple-empty-lines": [
      2,
      {"max": 2}
    ],
    "no-unused-vars": [
      2,
      {"vars": "local"}
    ],
    "object-curly-spacing": [
      2,
      "never"
    ],
    "quotes": [
      2,
      "single"
    ],
    "semi": [
      2,
      "always"
    ],
    "semi-spacing": [
      2,
      {
        "before": false,
        "after":  true
      }
    ],
    "space-after-keywords": [
      2,
      "always"
    ],
    "space-before-function-paren": [
      2,
      "always"
    ],
    "space-in-parens": [
      2,
      "never"
    ],
    "spaced-comment": [
      2,
      "always"
    ],
    "strict": [
      2,
      "global"
    ],
    "valid-jsdoc": [
      2,
      {}
    ]
  },
  "env": {
    "browser": true,
    "mocha":   true
  },
  "extends": "eslint:recommended",
  "globals": {
    "exports": true,
    "module":  true,
    "mocha":   true,
    "process": true,
    "require": true
  }
}
